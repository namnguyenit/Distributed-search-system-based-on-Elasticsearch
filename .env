# webapp/.env

# Cấu hình Server
PORT=3000
NODE_ENV=development # Có thể là 'development', 'production', 'test'

# Cấu hình MongoDB
# Nếu chạy webapp trực tiếp trên host và MongoDB qua Docker (đã map port 27017)
MONGODB_URI=mongodb://mongo:27017/my_search_db
# Nếu bạn đã cấu hình user/pass cho MongoDB và muốn dùng khi chạy local không qua docker-compose:
# MONGODB_URI=mongodb://yourmongouser:yourmongopassword@localhost:27017/my_search_db?authSource=admin

# Cấu hình Elasticsearch
# Nếu chạy webapp trực tiếp trên host và Elasticsearch qua Docker (Load Balancer map port 8080)
ELASTICSEARCH_HOST=http://localhost:8080

